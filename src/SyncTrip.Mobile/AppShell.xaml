<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SyncTrip.Mobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SyncTrip.Mobile"
    xmlns:profile="clr-namespace:SyncTrip.Mobile.Features.Profile.Views"
    xmlns:garage="clr-namespace:SyncTrip.Mobile.Features.Garage.Views"
    xmlns:convoy="clr-namespace:SyncTrip.Mobile.Features.Convoy.Views"
    Title="SyncTrip">

    <TabBar>
        <!-- Profile Tab -->
        <ShellContent
            Title="Profil"
            Icon="person.png"
            ContentTemplate="{DataTemplate profile:ProfilePage}"
            Route="profile" />

        <!-- Garage Tab -->
        <ShellContent
            Title="Garage"
            Icon="car.png"
            ContentTemplate="{DataTemplate garage:GaragePage}"
            Route="garage" />

        <!-- Convoy Tab -->
        <ShellContent
            Title="Convois"
            Icon="car.png"
            ContentTemplate="{DataTemplate convoy:ConvoyLobbyPage}"
            Route="convoys" />
    </TabBar>

</Shell>
