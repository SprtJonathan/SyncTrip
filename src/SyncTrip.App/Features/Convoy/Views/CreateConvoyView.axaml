<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:SyncTrip.App.Features.Convoy.ViewModels"
             xmlns:dto="clr-namespace:SyncTrip.Shared.DTOs.Vehicles;assembly=SyncTrip.Shared"
             x:Class="SyncTrip.App.Features.Convoy.Views.CreateConvoyView"
             x:DataType="vm:CreateConvoyViewModel">

    <ScrollViewer>
        <StackPanel Margin="30" Spacing="20">

            <TextBlock Text="Creer un convoi" FontSize="24" FontWeight="Bold" Margin="0,20,0,10" />
            <TextBlock Text="Selectionnez un vehicule et configurez votre convoi"
                       FontSize="14" Foreground="{DynamicResource Gray500Brush}" Margin="0,0,0,20" />

            <!-- Loading -->
            <ProgressBar IsVisible="{Binding IsLoading}" IsIndeterminate="True" Height="4" />

            <!-- Form -->
            <StackPanel IsVisible="{Binding HasVehicles}" Spacing="20">

                <!-- Vehicle selection -->
                <TextBlock Text="Vehicule *" FontSize="14" FontWeight="Bold" />
                <ComboBox ItemsSource="{Binding Vehicles}"
                          SelectedItem="{Binding SelectedVehicle}"
                          PlaceholderText="Selectionnez un vehicule"
                          HorizontalAlignment="Stretch">
                    <ComboBox.ItemTemplate>
                        <DataTemplate x:DataType="dto:VehicleDto">
                            <TextBlock Text="{Binding Model, StringFormat='{}{0}'}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <!-- Private toggle -->
                <StackPanel Orientation="Horizontal" Spacing="15">
                    <ToggleSwitch IsChecked="{Binding IsPrivate}" />
                    <TextBlock Text="Convoi prive" VerticalAlignment="Center" FontSize="14" />
                </StackPanel>

                <!-- Buttons -->
                <StackPanel Spacing="15" Margin="0,20,0,0">
                    <Button Content="Creer le convoi"
                            Command="{Binding CreateConvoyCommand}"
                            IsEnabled="{Binding IsLoading, Converter={StaticResource InvertedBoolConverter}}"
                            Height="50" CornerRadius="25" FontWeight="Bold"
                            Background="{DynamicResource SuccessBrush}" Foreground="White"
                            HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" />
                </StackPanel>
            </StackPanel>

            <!-- Error -->
            <Border IsVisible="{Binding ErrorMessage, Converter={StaticResource IsNotNullOrEmptyConverter}}"
                    BorderBrush="{DynamicResource ErrorBrush}" BorderThickness="1" CornerRadius="10" Padding="15">
                <TextBlock Text="{Binding ErrorMessage}" Foreground="{DynamicResource ErrorBrush}" HorizontalAlignment="Center" TextWrapping="Wrap" />
            </Border>

        </StackPanel>
    </ScrollViewer>

</UserControl>
