<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:SyncTrip.App.Features.Convoy.ViewModels"
             xmlns:dto="clr-namespace:SyncTrip.Shared.DTOs.Convoys;assembly=SyncTrip.Shared"
             xmlns:nav="clr-namespace:SyncTrip.Shared.DTOs.Navigation;assembly=SyncTrip.Shared"
             x:Class="SyncTrip.App.Features.Convoy.Views.ConvoyDetailView"
             x:DataType="vm:ConvoyDetailViewModel">

    <ScrollViewer>
        <StackPanel Margin="20" Spacing="15">

            <TextBlock Text="Detail du convoi" FontSize="24" FontWeight="Bold" Margin="0,20,0,10" />

            <!-- Loading -->
            <ProgressBar IsVisible="{Binding IsLoading}" IsIndeterminate="True" Height="4" />

            <!-- Convoy Info -->
            <Border IsVisible="{Binding Convoy, Converter={StaticResource IsNotNullConverter}}"
                    BorderBrush="{DynamicResource Gray300Brush}" BorderThickness="1"
                    CornerRadius="15" Padding="20" Margin="0,10">
                <StackPanel Spacing="10">
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <TextBlock Text="Code:" FontSize="14" Foreground="{DynamicResource Gray500Brush}" VerticalAlignment="Center" />
                        <TextBlock Text="{Binding Convoy.JoinCode}" FontSize="20" FontWeight="Bold" VerticalAlignment="Center" />
                        <Border IsVisible="{Binding Convoy.IsPrivate}"
                                Background="{DynamicResource WarningBrush}" Padding="8,4" CornerRadius="8" VerticalAlignment="Center">
                            <TextBlock Text="Prive" FontSize="12" FontWeight="Bold" />
                        </Border>
                    </StackPanel>
                    <TextBlock Text="{Binding Convoy.LeaderUsername, StringFormat='Leader: {0}'}"
                               FontSize="14" Foreground="{DynamicResource Gray500Brush}" />
                </StackPanel>
            </Border>

            <!-- Chat -->
            <Button Content="Ouvrir le chat"
                    Command="{Binding OpenChatCommand}"
                    Height="50" CornerRadius="25" FontWeight="Bold"
                    Background="{DynamicResource PrimaryBrush}" Foreground="White"
                    HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"
                    Margin="0,10,0,0" />

            <!-- Trip Actions -->
            <StackPanel Spacing="10" Margin="0,10,0,0">

                <!-- Start Trip button (leader only, no active trip, form hidden) -->
                <Button Content="Demarrer un voyage"
                        Command="{Binding ToggleStartTripFormCommand}"
                        IsVisible="{Binding CanShowStartTripButton}"
                        Height="50" CornerRadius="25" FontWeight="Bold"
                        Background="{DynamicResource SuccessBrush}" Foreground="White"
                        HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" />

                <!-- Start Trip Form -->
                <Border IsVisible="{Binding ShowStartTripForm}"
                        BorderBrush="{DynamicResource Gray300Brush}" BorderThickness="1"
                        CornerRadius="15" Padding="20">
                    <StackPanel Spacing="12">
                        <TextBlock Text="Destination du voyage" FontSize="16" FontWeight="Bold" />

                        <!-- Address Search -->
                        <TextBlock Text="Rechercher une adresse" FontSize="13" Foreground="{DynamicResource Gray500Brush}" />
                        <Border BorderBrush="{DynamicResource Gray300Brush}" BorderThickness="1" CornerRadius="10" Padding="10,6">
                            <TextBox Watermark="Rechercher une adresse..." Text="{Binding SearchQuery}" BorderThickness="0" />
                        </Border>

                        <!-- Search Loading -->
                        <ProgressBar IsVisible="{Binding IsSearching}" IsIndeterminate="True" Height="3" />

                        <!-- Search Results -->
                        <Border IsVisible="{Binding ShowSearchResults}"
                                BorderBrush="{DynamicResource Gray300Brush}" BorderThickness="1"
                                CornerRadius="10" MaxHeight="200">
                            <ScrollViewer>
                                <ItemsControl ItemsSource="{Binding SearchResults}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate x:DataType="nav:AddressResultDto">
                                            <Button Command="{Binding $parent[ItemsControl].((vm:ConvoyDetailViewModel)DataContext).SelectAddressCommand}"
                                                    CommandParameter="{Binding}"
                                                    Background="Transparent" HorizontalAlignment="Stretch"
                                                    HorizontalContentAlignment="Left" Padding="12,8" CornerRadius="0">
                                                <StackPanel Spacing="2">
                                                    <TextBlock Text="{Binding DisplayName}" TextTrimming="CharacterEllipsis" FontSize="13" />
                                                    <TextBlock Text="{Binding Type}" FontSize="11" Foreground="{DynamicResource Gray500Brush}" />
                                                </StackPanel>
                                            </Button>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Border>

                        <!-- Selected Address -->
                        <Border IsVisible="{Binding SelectedAddress, Converter={StaticResource IsNotNullConverter}}"
                                Background="{DynamicResource SuccessBrush}" CornerRadius="10" Padding="12,8">
                            <Grid ColumnDefinitions="*,Auto">
                                <StackPanel Grid.Column="0" Spacing="2" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding SelectedAddress.DisplayName}" TextTrimming="CharacterEllipsis"
                                               FontSize="13" Foreground="White" FontWeight="SemiBold" />
                                    <TextBlock Text="{Binding SelectedAddress.Type}" FontSize="11" Foreground="White" Opacity="0.8" />
                                </StackPanel>
                                <Button Grid.Column="1" Content="X"
                                        Command="{Binding ClearAddressCommand}"
                                        Background="Transparent" Foreground="White"
                                        FontWeight="Bold" FontSize="14"
                                        Width="32" Height="32" Padding="0"
                                        HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                                        VerticalAlignment="Center" />
                            </Grid>
                        </Border>

                        <!-- Route Profile -->
                        <TextBlock Text="Profil de route" FontSize="13" Foreground="{DynamicResource Gray500Brush}" />
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <RadioButton Content="Rapide" IsChecked="True"
                                         GroupName="RouteProfile"
                                         Checked="OnRouteProfileFast" />
                            <RadioButton Content="Panoramique"
                                         GroupName="RouteProfile"
                                         Checked="OnRouteProfileScenic" />
                        </StackPanel>

                        <!-- Destination Name (optional override) -->
                        <TextBlock Text="Nom personnalise (optionnel)" FontSize="13" Foreground="{DynamicResource Gray500Brush}" />
                        <Border BorderBrush="{DynamicResource Gray300Brush}" BorderThickness="1" CornerRadius="10" Padding="10,6">
                            <TextBox Watermark="Ex: Chez mamie, Point de rendez-vous..." Text="{Binding DestinationName}" BorderThickness="0" />
                        </Border>

                        <Grid ColumnDefinitions="*,10,*" Margin="0,5,0,0">
                            <Button Grid.Column="0" Content="Annuler"
                                    Command="{Binding ToggleStartTripFormCommand}"
                                    Height="50" CornerRadius="25" FontWeight="Bold"
                                    Background="{DynamicResource Gray300Brush}"
                                    HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" />
                            <Button Grid.Column="2" Content="Demarrer le voyage"
                                    Command="{Binding StartTripCommand}"
                                    Height="50" CornerRadius="25" FontWeight="Bold"
                                    Background="{DynamicResource SuccessBrush}" Foreground="White"
                                    HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" />
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Active Trip Panel -->
                <Border IsVisible="{Binding HasActiveTrip}"
                        Background="{DynamicResource PrimaryBrush}" CornerRadius="15" Padding="20">
                    <StackPanel Spacing="12">
                        <TextBlock Text="Voyage en cours" FontSize="18" FontWeight="Bold" Foreground="White" />
                        <TextBlock Text="{Binding ActiveTripDestination, StringFormat='Destination : {0}'}"
                                   IsVisible="{Binding ActiveTripDestination, Converter={StaticResource IsNotNullOrEmptyConverter}}"
                                   FontSize="14" Foreground="White" Opacity="0.9" />
                        <Button Content="Ouvrir le cockpit"
                                Command="{Binding OpenCockpitCommand}"
                                Height="50" CornerRadius="25" FontWeight="Bold"
                                Background="White" Foreground="{DynamicResource PrimaryBrush}"
                                HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" />
                        <Button Content="Terminer le voyage"
                                Command="{Binding EndTripCommand}"
                                Height="40" CornerRadius="20" FontWeight="Bold"
                                Background="Transparent" Foreground="White"
                                BorderBrush="White" BorderThickness="1"
                                HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" />
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Members -->
            <TextBlock Text="Membres" FontSize="18" FontWeight="Bold" Margin="0,20,0,5" />
            <ItemsControl ItemsSource="{Binding Convoy.Members}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate x:DataType="dto:ConvoyMemberDto">
                        <Border BorderBrush="{DynamicResource Gray300Brush}" BorderThickness="1"
                                CornerRadius="10" Padding="15" Margin="0,5">
                            <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto" RowSpacing="4">
                                <TextBlock Grid.Row="0" Grid.Column="0"
                                           Text="{Binding Username}" FontSize="16" FontWeight="Bold" />
                                <Border Grid.Row="0" Grid.Column="1"
                                        Background="{DynamicResource PrimaryBrush}" Padding="8,4" CornerRadius="8"
                                        VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Role, Converter={StaticResource ConvoyRoleConverter}}"
                                               FontSize="12" Foreground="White" FontWeight="Bold" />
                                </Border>
                                <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                           Text="{Binding VehicleBrand, StringFormat='{}{0}'}"
                                           FontSize="13" Foreground="{DynamicResource Gray500Brush}" />
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- Error -->
            <Border IsVisible="{Binding ErrorMessage, Converter={StaticResource IsNotNullOrEmptyConverter}}"
                    BorderBrush="{DynamicResource ErrorBrush}" BorderThickness="1" CornerRadius="10" Padding="15">
                <TextBlock Text="{Binding ErrorMessage}" Foreground="{DynamicResource ErrorBrush}" HorizontalAlignment="Center" TextWrapping="Wrap" />
            </Border>

        </StackPanel>
    </ScrollViewer>

</UserControl>
